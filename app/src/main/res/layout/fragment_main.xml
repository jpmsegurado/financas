<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="com.example.joaopedro.minhasfinancas.fragment.MainFragment">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/card"
            card_view:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        android:text="Resumo - Julho"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />


                    <RelativeLayout
                        android:layout_marginTop="25dp"
                        android:id="@+id/rel_receitas"
                        android:layout_width="match_parent"
                        style="@drawable/item_resumo"
                        android:clickable="true"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/green_left_border"
                            android:text="Receitas"
                            android:textSize="15dp"
                            android:padding="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 0,00"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:padding="10dp"
                            android:textColor="@color/sucesso"
                            android:id="@+id/receita"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rel_despesas"
                        android:clickable="true"
                        style="@drawable/item_resumo"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/red_left_border"
                            android:text="Despesas"
                            android:textSize="15dp"
                            android:padding="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 0,00"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:padding="10dp"
                            android:textColor="@color/perigo_light"
                            android:id="@+id/despesa"
                            />

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/gray_top_border"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sucesso"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/button_card"
                        android:text="VER RECEITAS"
                        android:id="@+id/verReceitas"
                    />
                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/perigo_light"
                        android:background="@drawable/button_card"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="VER DESPESAS"
                        android:id="@+id/verDespesas"
                        />
                </LinearLayout>
            </RelativeLayout>



        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/card"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="3dp"
        android:layout_height="210dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RelatÃ³rios - Julho"
                    android:id="@+id/title2"
                    android:textSize="25dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="Salvar 10% da receita total"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="R$ 150,00"
                    android:id="@+id/salvar"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/sucesso"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="Invista em si mesmo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="R$ 500,00"
                    android:id="@+id/invest"
                    android:layout_marginRight="10dp"
                    android:textColor="#0099CC"
                    android:layout_alignParentRight="true"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gray_top_border"
                android:gravity="right"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/amber"
                    android:background="@drawable/button_card"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="LER MAIS"
                    android:id="@+id/lerMais"
                    />
            </LinearLayout>
        </RelativeLayout>




    </android.support.v7.widget.CardView>


        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            fab:fab_addButtonColorNormal="@color/amber"
            fab:fab_addButtonColorPressed="@color/amber_dark"
            fab:fab_addButtonPlusIconColor="#fff"
            android:layout_marginBottom="16dp"
            fab:fab_labelStyle="@style/menu_labels_style"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:layout_marginEnd="16dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/nova_receita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/sucesso_light"
                fab:fab_colorPressed="@color/sucesso"
                fab:fab_icon="@drawable/ic_attach_money_white_48dp"
                fab:fab_title="Nova receita"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/nova_despesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/perigo_light"
                fab:fab_icon="@drawable/ic_money_off_white_48dp"
                fab:fab_colorPressed="@color/perigo"
                fab:fab_title="Nova despesa"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>


    </RelativeLayout>
</LinearLayout>
